<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themed_background"
    android:clipChildren="false"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:stateListAnimator="@null"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:contentScrim="@color/primary_teal"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:titleEnabled="false">

            <!-- Header Image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/header_learning_chinese"
                app:layout_collapseMode="parallax" />

            <!-- Dark Overlay for Text Readability -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#66000000"
                app:layout_collapseMode="parallax"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/home_welcome"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:shadowColor="#80000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/home_user_name"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:shadowColor="#80000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="32dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_settings_person"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginBottom="?attr/actionBarSize"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Stats Card with Animation -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:elevation="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/progressTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Progress"
                        android:textColor="@color/themed_text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnContinueLearning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Continue"
                        android:textSize="12sp"
                        android:paddingHorizontal="16dp"
                        android:minHeight="0dp"
                        android:layout_marginTop="-8dp"
                        app:cornerRadius="20dp"
                        app:layout_constraintTop_toTopOf="@id/progressTitle"
                        app:layout_constraintBottom_toBottomOf="@id/progressTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>

                    <View
                        android:id="@+id/divider"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:background="#E0E0E0"
                        app:layout_constraintTop_toBottomOf="@id/progressTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5"/>

                    <LinearLayout
                        android:id="@+id/streakLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@+id/divider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_icon_circle"
                            android:backgroundTint="#009688"
                            android:padding="6dp"
                            android:src="@drawable/ic_chart"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/tvStreakValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="12"
                            android:textColor="@color/themed_text_primary"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/daily_streak_label"
                            android:textColor="@color/themed_text_secondary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@+id/divider"
                        app:layout_constraintStart_toEndOf="@+id/guideline"
                        app:layout_constraintEnd_toEndOf="parent">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp">
                            
                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/circularProgress"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:progress="80"
                                app:trackThickness="4dp"
                                app:indicatorColor="#FFAB91"
                                app:trackColor="#FFF3E0"/>
                                
                            <TextView
                                android:id="@+id/tvProgressPercentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="80%"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:textColor="#FFAB91"/>
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvGoalValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="8/10"
                            android:textColor="@color/themed_text_primary"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/todays_goal_label"
                            android:textColor="@color/themed_text_secondary"
                            android:textSize="12sp" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learning Tools"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/themed_text_primary"
                android:layout_marginBottom="16dp"/>

            <GridLayout
                android:id="@+id/menuGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3">

                <!-- Item 1: Chat -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardLanguage"
                    style="@style/HomeGridCard"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">
                    <LinearLayout style="@style/HomeGridContent">
                        <ImageView style="@style/HomeGridIcon"
                            android:background="@drawable/bg_icon_circle"
                            android:backgroundTint="#3CAEA3"
                            android:padding="10dp"
                            android:src="@drawable/ic_language" 
                            app:tint="@color/white"/>
                        <TextView style="@style/HomeGridTitle" android:text="AI Chat"/>
                        <TextView style="@style/HomeGridSubtitle" android:text="Practice conversation"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                
                <!-- Item 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPronunciation"
                    style="@style/HomeGridCard"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">
                    <LinearLayout style="@style/HomeGridContent">
                        <ImageView style="@style/HomeGridIcon"
                            android:background="@drawable/bg_icon_circle"
                            android:backgroundTint="#FFAB91"
                            android:padding="10dp"
                            android:src="@drawable/ic_mic" 
                            app:tint="@color/white"/>
                        <TextView style="@style/HomeGridTitle" android:text="Pronunciation"/>
                        <TextView style="@style/HomeGridSubtitle" android:text="Improve accent"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Item 3 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardVocab"
                    style="@style/HomeGridCard"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">
                    <LinearLayout style="@style/HomeGridContent">
                        <ImageView style="@style/HomeGridIcon"
                            android:background="@drawable/bg_icon_circle"
                            android:backgroundTint="#CE93D8"
                            android:padding="10dp"
                            android:src="@drawable/ic_book" 
                            app:tint="@color/white"/>
                        <TextView style="@style/HomeGridTitle" android:text="Vocabulary"/>
                        <TextView style="@style/HomeGridSubtitle" android:text="Learn new words"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Item 4 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardGrammar"
                    style="@style/HomeGridCard"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">
                    <LinearLayout style="@style/HomeGridContent">
                        <ImageView style="@style/HomeGridIcon"
                            android:background="@drawable/bg_icon_circle"
                            android:backgroundTint="#4DB6AC"
                            android:padding="10dp"
                            android:src="@drawable/ic_edit" 
                            app:tint="@color/white"/>
                        <TextView style="@style/HomeGridTitle" android:text="Grammar"/>
                        <TextView style="@style/HomeGridSubtitle" android:text="Correction tool"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Item 5 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardNotepad"
                    style="@style/HomeGridCard"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1">
                    <LinearLayout style="@style/HomeGridContent">
                        <ImageView style="@style/HomeGridIcon"
                            android:background="@drawable/bg_icon_circle"
                            android:backgroundTint="#A5D6A7"
                            android:padding="10dp"
                            android:src="@drawable/ic_edit" 
                            app:tint="@color/white"/>
                        <TextView style="@style/HomeGridTitle" android:text="Notepad"/>
                        <TextView style="@style/HomeGridSubtitle" android:text="Write notes"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <View android:layout_width="match_parent" android:layout_height="80dp"/> <!-- Bottom spacing -->

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/themed_surface"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/primary_teal"
        app:itemTextColor="@color/primary_teal"
        app:elevation="16dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>